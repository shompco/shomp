<Layouts.flash_group flash={@flash} />

<!-- Hero Section -->
<div class="bg-gradient-to-br from-primary/10 to-secondary/10 py-20">
  <div class="container mx-auto px-4">
    <!-- Header with Category Button and Title -->
    <div class="flex flex-col lg:flex-row items-center justify-between mb-8">
      <!-- Category Dropdown -->
      <%= if !Enum.empty?(@categories_with_products) do %>
        <div class="dropdown dropdown-hover mb-6 lg:mb-0">
          <div tabindex="0" role="button" class="btn btn-outline btn-lg text-2xl font-light hover:btn-primary transition-all duration-300">
            Browse by Category
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
          <ul tabindex="0" class="dropdown-content z-[1] menu p-4 shadow-2xl bg-base-100 rounded-box w-80 max-h-96 overflow-y-auto border border-base-300">
            <%= for {category_name, category_slug} <- @categories_with_products do %>
              <li>
                <a href={"/categories/#{category_slug}"} class="text-lg py-3 px-4 hover:bg-primary/10 rounded-lg transition-colors">
                  <%= category_name %>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <!-- Welcome Title -->
      <div class="text-center lg:text-right">
        <h1 class="text-5xl md:text-6xl font-bold text-primary">
          Welcome to Shomp
        </h1>
      </div>
    </div>
    
    <!-- Description and CTA Buttons -->
    <div class="text-center">
      <p class="text-xl md:text-2xl text-base-content/70 mb-8 max-w-3xl mx-auto">
        The platform with zero platform fee. Discover amazing products from independent creators. From handmade goods to digital creations, Shomp is the place where you can sell and buy.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/stores" class="btn btn-primary btn-lg">
          All Stores
        </a>
        <a href="/categories" class="btn btn-outline btn-lg">
          All Categories
        </a>
      </div>
    </div>
  </div>
</div>


<!-- Featured Mission Statement -->
<div class="py-16 bg-base-100">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-4xl mx-auto">
      <blockquote class="text-2xl md:text-3xl font-medium text-base-content/90 leading-relaxed italic">
        <span class="text-6xl text-primary/30 leading-none">"</span>
        Empowering U.S. artists and creators by providing a supportive marketplace that enables sustainable livelihoods and fosters creative growth.
        <span class="text-6xl text-primary/30 leading-none">"</span>
      </blockquote>
    </div>
  </div>
</div>


<!-- Latest Products Section -->
<div class="py-16 bg-base-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold">Latest Products</h2>
      <a href="/stores" class="btn btn-outline">View All</a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <%= for product <- @latest_products do %>
        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
          <figure class="px-6 pt-6">
            <%= if product.image_thumb do %>
              <img src={product.image_thumb} alt={product.title} class="w-full h-48 object-cover rounded-lg" />
            <% else %>
              <div class="w-full h-48 bg-gradient-to-br from-primary/20 to-secondary/20 rounded-lg flex items-center justify-center">
                <span class="text-4xl">
                  <%= case product.type do %>
                    <% "digital" -> %>üíª
                    <% "physical" -> %>üì¶
                    <% _ -> %>üé®
                  <% end %>
                </span>
              </div>
            <% end %>
          </figure>
          <div class="card-body">
            <h3 class="card-title text-lg"><%= product.title %></h3>
            <p class="text-sm text-base-content/70">
              <%= if product.description && String.length(product.description) > 0 do %>
                <%= String.slice(product.description, 0, 100) %><%= if String.length(product.description) > 100, do: "...", else: "" %>
              <% else %>
                <%= case product.type do %>
                  <% "digital" -> %>Digital product available for download
                  <% "physical" -> %>Physical product available for purchase
                  <% _ -> %>Product available for purchase
                <% end %>
              <% end %>
            </p>
            <%= if product.store do %>
              <p class="text-xs text-base-content/50 mt-2">by <%= product.store.name %></p>
            <% end %>
            <div class="flex justify-between items-center mt-4">
              <span class="text-2xl font-bold text-primary">$<%= product.price %></span>
              <a href={
                if product.store do
                  if product.slug do
                    if product.custom_category && product.custom_category.slug do
                      "/stores/#{product.store.slug}/#{product.custom_category.slug}/#{product.slug}"
                    else
                      "/stores/#{product.store.slug}/#{product.slug}"
                    end
                  else
                    "/stores/#{product.store.slug}/products/#{product.id}"
                  end
                else
                  "#"
                end
              } class="btn btn-primary btn-sm">View Details</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <%= if Enum.empty?(@latest_products) do %>
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üé®</div>
        <h3 class="text-xl font-semibold mb-2">No products yet</h3>
        <p class="text-base-content/70 mb-6">Be the first to create amazing products!</p>
        <a href="/stores/new" class="btn btn-primary">Create Your Store</a>
      </div>
    <% end %>
  </div>
</div>

<!-- Editor's Picks Section -->
<div class="py-16 bg-base-100">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold">Editor's Picks</h2>
      <a href="/stores" class="btn btn-outline">Discover More</a>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <%= for product <- @featured_products do %>
        <div class="card bg-gradient-to-br from-primary/5 to-secondary/5 border-2 border-primary/20">
          <div class="card-body">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center">
                <%= if product.image_thumb do %>
                  <img src={product.image_thumb} alt={product.title} class="w-12 h-12 object-cover rounded-full" />
                <% else %>
                  <span class="text-2xl">
                    <%= case product.type do %>
                      <% "digital" -> %>üíª
                      <% "physical" -> %>üì¶
                      <% _ -> %>üèÜ
                    <% end %>
                  </span>
                <% end %>
              </div>
              <div>
                <h3 class="text-xl font-bold"><%= product.title %></h3>
                <p class="text-sm text-base-content/70">
                  <%= if product.store do %>
                    by <%= product.store.name %>
                  <% else %>
                    Featured product
                  <% end %>
                </p>
              </div>
            </div>
            <p class="text-base-content/80 mb-4">
              <%= if product.description && String.length(product.description) > 0 do %>
                <%= String.slice(product.description, 0, 150) %><%= if String.length(product.description) > 150, do: "...", else: "" %>
              <% else %>
                <%= case product.type do %>
                  <% "digital" -> %>Premium digital product available for immediate download
                  <% "physical" -> %>High-quality physical product available for purchase
                  <% _ -> %>Featured product with exceptional value
                <% end %>
              <% end %>
            </p>
            <div class="flex justify-between items-center">
              <span class="text-3xl font-bold text-primary">$<%= product.price %></span>
              <a href={
                if product.store do
                  if product.slug do
                    if product.custom_category && product.custom_category.slug do
                      "/stores/#{product.store.slug}/#{product.custom_category.slug}/#{product.slug}"
                    else
                      "/stores/#{product.store.slug}/#{product.slug}"
                    end
                  else
                    "/stores/#{product.store.slug}/products/#{product.id}"
                  end
                else
                  "#"
                end
              } class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% end %>
      
      <%= if Enum.empty?(@featured_products) do %>
        <div class="col-span-2 text-center py-12">
          <div class="text-6xl mb-4">‚≠ê</div>
          <h3 class="text-xl font-semibold mb-2">No featured products yet</h3>
          <p class="text-base-content/70 mb-6">Create amazing products to be featured here!</p>
          <a href="/stores/new" class="btn btn-primary">Create Your Store</a>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Explore Categories -->
<%= if !Enum.empty?(@categories_with_counts) do %>
<div class="py-16 bg-base-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Explore Categories</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <%= for {category_name, category_slug, count} <- @categories_with_counts do %>
        <a href={"/categories/#{category_slug}"} class="card bg-base-200 hover:bg-base-300 transition-colors cursor-pointer">
          <div class="card-body text-center">
            <div class="flex justify-center gap-2 mb-4">
              <%= for product <- get_category_sample_products(category_slug, 2) do %>
                <div class="w-16 h-16 rounded-lg overflow-hidden bg-base-300">
                  <%= if product.image_thumb do %>
                    <img src={product.image_thumb} 
                         alt={product.title} 
                         class="w-full h-full object-cover" />
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center text-base-content/40">
                      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <h3 class="card-title justify-center">
              <%= category_name %>
              <span class="text-sm font-normal text-base-content/60">(<%= count %>)</span>
            </h3>
            <p class="text-sm text-base-content/70">
              <%= get_category_description(category_name) %>
            </p>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
<% end %>

 <!-- Call to Action -->
 <div class="py-16 bg-primary text-primary-content">
   <div class="container mx-auto px-4 text-center">
     <h2 class="text-3xl font-bold mb-4">Ready to Start Selling?</h2>
    <p class="text-xl mb-8 opacity-90">
      Join creators who are ready to take control of their earnings
    </p>
     <div class="flex flex-col sm:flex-row gap-4 justify-center">
       <a href="/stores/new" class="btn btn-secondary btn-lg">
