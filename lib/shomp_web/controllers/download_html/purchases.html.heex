<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">My Purchases</h1>
      <p class="text-lg text-gray-600 mt-2">All your purchased products and download history</p>
    </div>

    <!-- Stats -->
    <%= if @stats do %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Orders</p>
              <p class="text-2xl font-semibold text-gray-900"><%= length(@orders) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Total Items</p>
              <p class="text-2xl font-semibold text-gray-900"><%= Enum.reduce(@orders, 0, fn order, acc -> acc + length(order.order_items) end) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">Unique Products</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @stats.unique_products || 0 %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Purchases List -->
    <div class="bg-white shadow rounded-lg">
      <%= if Enum.empty?(@orders) do %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No purchases yet</h3>
          <p class="mt-1 text-sm text-gray-500">Start shopping to see your purchases here.</p>
          <div class="mt-6">
            <a href="/" class="btn btn-primary">
              Browse Products
            </a>
          </div>
        </div>
      <% else %>
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">Recent Purchases</h2>
        </div>
        
        <ul class="divide-y divide-gray-200">
          <%= for order <- @orders do %>
            <li class="px-6 py-6">
              <div class="flex items-center justify-between mb-4">
                <div>
                  <h3 class="text-lg font-medium text-gray-900">
                    Order <%= order.immutable_id %>
                  </h3>
                  <p class="text-sm text-gray-500">
                    <%= Calendar.strftime(order.inserted_at, "%B %d, %Y at %I:%M %p") %>
                  </p>
                </div>
                <div class="text-right">
                  <p class="text-lg font-bold text-gray-900">
                    $<%= Decimal.to_string(order.total_amount) %>
                  </p>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= String.capitalize(order.status) %>
                  </span>
                </div>
              </div>
              
              <!-- Order Items -->
              <div class="space-y-3 mb-4">
                <%= for order_item <- order.order_items do %>
                  <div class="flex items-center justify-between py-3 px-4 bg-gray-50 rounded-md">
                    <div class="flex items-center space-x-3">
                      <div class="w-10 h-10 bg-gray-200 rounded flex items-center justify-center">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      </div>
                      <div>
                        <p class="text-sm font-medium text-gray-900">
                          <%= order_item.product.title %>
                        </p>
                        <p class="text-xs text-gray-500">
                          <%= order_item.product.store.name %> â€¢ $<%= Decimal.to_string(order_item.price) %>
                        </p>
                      </div>
                    </div>
                    <div class="flex items-center space-x-2">
                      <a href={~p"/#{order_item.product.store.slug}/products/#{order_item.product_id}"} class="btn btn-xs btn-outline">
                        View Product
                      </a>
                      <%= if order_item.product.type == "digital" do %>
                        <%= if @get_download_token.(order_item.product_id, order.user_id) do %>
                          <a href={~p"/downloads/#{@get_download_token.(order_item.product_id, order.user_id)}"} class="btn btn-xs btn-primary">
                            Download
                          </a>
                        <% end %>
                      <% end %>
                      <a href={~p"/#{order_item.product.store.slug}/products/#{order_item.product_id}/reviews/new"} class="btn btn-xs btn-secondary">
                        Review
                      </a>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- Order Actions -->
              <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                <div class="text-sm text-gray-500">
                  <%= length(order.order_items) %> item<%= if length(order.order_items) != 1, do: "s", else: "" %>
                </div>
                <a href={~p"/orders/#{order.immutable_id}"} class="btn btn-primary btn-sm">
                  View Order Details
                </a>
              </div>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
