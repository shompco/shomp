<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <div class="text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
          <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
          Payment Successful!
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Thank you for your purchase. Your payment has been processed successfully.
        </p>
        
        <%= if @conn.params["session_id"] do %>
          <div class="mt-4 p-3 bg-gray-50 rounded-md">
            <p class="text-xs text-gray-500">Session ID: <%= @conn.params["session_id"] %></p>
          </div>
        <% end %>
      </div>
      
      <!-- Donation Section -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 text-center mb-4">
          Want to show extra support?
        </h3>
        <div class="space-y-3">
          <button 
            phx-click="donate" 
            phx-value-amount="5" 
            class="w-full btn btn-outline btn-sm"
          >
            💝 Tip $5
          </button>
          <button 
            phx-click="donate" 
            phx-value-amount="10" 
            class="w-full btn btn-outline btn-sm"
          >
            💝 Tip $10
          </button>
          <button 
            phx-click="donate" 
            phx-value-amount="20" 
            class="w-full btn btn-outline btn-sm"
          >
            💝 Tip $20
          </button>
          <div class="text-center">
            <p class="text-xs text-gray-500 mt-2">
              Your support helps creators continue making amazing content!
            </p>
          </div>
        </div>
      </div>
      
      <div class="mt-8">
        <div class="text-center space-y-3">
          <a href="/" class="btn btn-primary w-full">
            Return to Home
          </a>
          
          <%= if @conn.params["store_slug"] do %>
            <a href={"/#{@conn.params["store_slug"]}"} class="btn btn-outline w-full">
              Return to Store
            </a>
          <% end %>
          
          <a href="/dashboard" class="btn btn-outline w-full">
            Go to Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
