<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Shomp" suffix=" · Digital Marketplace">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script>
      window.stripePublishableKey = "<%= Application.get_env(:shomp, :stripe_publishable_key) %>";
    </script>
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      // Cart count update handler
      function updateCartCount(count) {
        const cartCountElement = document.getElementById("cart-count");
        if (cartCountElement) {
          cartCountElement.textContent = `(${count})`;
        } else {
          // Retry after a short delay in case the DOM isn't ready yet
          setTimeout(() => updateCartCount(count), 100);
        }
      }
      
      window.addEventListener("phx:cart-count-updated", (e) => {
        updateCartCount(e.detail.count);
      });
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    <ul class="menu menu-horizontal w-full relative z-10 flex items-center gap-4 px-4 sm:px-6 lg:px-8">
      <li class="mr-auto">
        <.link href={~p"/"} class="text-xl font-bold text-primary">Shomp</.link>
      </li>
      <li>
        <Layouts.theme_toggle />
      </li>
      <li>
        <.link href={~p"/"}>Home</.link>
      </li>
      <li>
        <.link href={~p"/stores"}>Browse Stores</.link>
      </li>
      <li>
        <.link href={~p"/about"}>About</.link>
      </li>
      <li>
        <.link href={~p"/requests"}>Feature Requests</.link>
      </li>
      <li>
        <.link href={~p"/donations"} class="btn btn-secondary btn-sm">💝 Donate</.link>
      </li>
      <%= if @current_scope do %>
        <li>
          <.link href={~p"/stores/new"} class="btn btn-primary btn-sm">Create Store</.link>
        </li>
        <li>
          <.link href={~p"/my/stores"}>
            My Stores
            <%= if @current_scope.user do %>
              <span class="badge badge-sm badge-primary ml-1">
                <%= Shomp.Stores.count_user_stores(@current_scope.user.id) %>
              </span>
            <% end %>
          </.link>
        </li>
        <li>
          <.link href={~p"/dashboard/store/balance"}>Store Balance</.link>
        </li>
        <li>
          <span class="text-sm text-gray-700">
            <%= @current_scope.user.username || "User" %>
          </span>
        </li>
        <li>
          <.link href={~p"/purchases"}>My Purchases</.link>
        </li>
        <li>
          <.link href={~p"/users/settings"}>Settings</.link>
        </li>
        <li>
          <.link href={~p"/users/log-out"} method="delete">Log out</.link>
        </li>
        <li>
          <.link href={~p"/cart"} class="flex items-center space-x-1">
            <span>🛒</span>
            <span class="cart-count" id="cart-count">(0)</span>
          </.link>
        </li>
      <% else %>
        <li>
          <.link href={~p"/users/register"}>Register</.link>
        </li>
        <li>
          <.link href={~p"/users/log-in"}>Log in</.link>
        </li>
      <% end %>
    </ul>
    {@inner_content}
    
         <!-- Footer -->
     <footer class="bg-base-200 mt-20">
       <div class="container mx-auto px-4 py-16">
        
        <!-- Footer Links -->
        <div class="border-t border-base-300 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="text-center md:text-left mb-4 md:mb-0">
              <p class="text-sm text-base-content/70">
                © 2025 Shomp. Empowering US artists and creatives.
              </p>
            </div>
            <div class="flex space-x-6">
              <a href="/about" class="text-sm text-base-content/70 hover:text-primary">About</a>
              <a href="/requests" class="text-sm text-base-content/70 hover:text-primary">Feature Requests</a>
              <a href="/stores" class="text-sm text-base-content/70 hover:text-primary">Browse Stores</a>
              <a href="/donations" class="text-sm text-base-content/70 hover:text-primary">💝 Donate</a>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
